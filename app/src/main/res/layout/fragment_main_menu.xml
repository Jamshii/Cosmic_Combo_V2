<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainMenuFragment"
    android:background="@drawable/bg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:src="@drawable/logo"
            android:layout_marginTop="30dp"/>

        <TextView
            android:id="@+id/tv_greetings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/logo"
            android:layout_centerHorizontal="true"
            android:textSize="18sp"
            android:text="Welcome Aboard!"
            android:fontFamily="@font/consola"
            android:textColor="@color/white"/>


        <ImageView
            android:id="@+id/btnStartGame"
            android:layout_below="@id/tv_greetings"
            android:layout_width="175dp"
            android:layout_height="70dp"
            android:layout_marginTop="25dp"
            android:src="@drawable/btn_start"
            android:layout_centerInParent="true"
            />

        <ImageView
            android:id="@+id/btn_login"
            android:layout_below="@id/btnStartGame"
            android:layout_width="175dp"
            android:layout_height="70dp"
            android:layout_marginTop="25dp"
            android:src="@drawable/btn_changename"
            android:layout_centerInParent="true"
            />

        <ImageView
            android:id="@+id/btnInstruction"
            android:layout_below="@id/btn_login"
            android:layout_width="175dp"
            android:layout_height="70dp"
            android:layout_marginTop="25dp"
            android:src="@drawable/btn_instruction"
            android:layout_centerInParent="true"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/difficulty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        android:background="@drawable/bg">

        <ImageView
            android:id="@+id/diff_choose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/difficulty_txtbx"/>

        <ImageView
            android:id="@+id/btnEasy"
            android:layout_width="200dp"
            android:layout_height="90dp"
            android:src="@drawable/btn_easy"
            android:layout_marginTop="150dp"
            android:layout_marginBottom="10dp"
            android:layout_centerHorizontal="true"/>

        <ImageView
            android:id="@+id/btnMedium"
            android:layout_width="200dp"
            android:layout_height="90dp"
            android:src="@drawable/btn_medium"
            android:layout_below="@id/btnEasy"
            android:layout_marginBottom="10dp"
            android:layout_centerHorizontal="true"/>

        <ImageView
            android:id="@+id/btnHard"
            android:layout_width="200dp"
            android:layout_height="90dp"
            android:src="@drawable/btn_hard"
            android:layout_below="@id/btnMedium"
            android:layout_centerHorizontal="true"/>

        <ImageView
            android:id="@+id/btn_x_difficulty"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/x_btn" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/instruction"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        android:background="@drawable/bg">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/instruction_txtbx" />

        <ImageView
            android:id="@+id/btn_x_instruction"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/x_btn" />

    </RelativeLayout>


</FrameLayout>